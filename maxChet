#include <stdio.h>
#include <locale.h>
#include <windows.h>
#define N 100
void main()
{
	setlocale(LC_ALL, "Russian");
	int n;//количество строк/столбцов в массиве;
	int A[N][N];//Массив;
	int i, j;//
	int MaxChet;//Переменная, обозначающая максимальный чётный элемент в строке с номером i;
	int b[N];//Искомая последвательность;
	printf("\n Enter count of strings/columns of matrix, please:\n\n");
	scanf_s("%d", &n);
	printf("\n\n Enter matrix %d x %d, please:\n\n", n, n);
	for (i = 0; i<n; ++i){
		scanf_s("%d", &A[i][1]);
		if (A[i][1] & 1)
			b[i] = A[i][1];
		else
			b[i] = -1;
		for (j = 1; j<n; ++j){
			scanf_s("%d", &A[i][j]);
				if ((!(A[i][j] & 1)) && (A[i][j]>b[i]))
					b[i] = A[i][j];
		}
		if (b[i] == -1)
			b[i] = 0;
	}
	Sleep(3000);
	system("cls");
	Sleep(1000);
	printf("\n\n Required sequence:\n\n");
	for (i = 0; i < n; ++i){
		Sleep(500);
		printf("%6d", b[i]);
	}

	Sleep(1500);

	printf("\n\n Инвариант в данной задаче:\n\n");
	Sleep(1000);
	printf(" b[i] - максимальный  чётный среди пройденных элементов строки с номером i, если такие элементы были, а если не было, то b[i] = -1.\n\n");
	Sleep(1000);
}
